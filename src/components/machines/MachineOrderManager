import React, { useState, useEffect, useMemo } from "react";
import { base44 } from "@/api/base44Client";
import { useQuery, useMutation, useQueryClient } from "@tanstack/react-query";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { DragDropContext, Droppable, Draggable } from "react-beautiful-dnd"; // Cambiado a versión estable
import { GripVertical, Save, RefreshCw, AlertCircle } from "lucide-react";
import { toast } from "sonner";

export default function MachineOrderManager() {
  const queryClient = useQueryClient();
  
  // Query con mejor manejo de errores
  const { 
    data: machines = [], 
    isLoading, 
    error: fetchError,
    refetch 
  } = useQuery({
    queryKey: ['machines'],
    queryFn: async () => {
      try {
        const response = await base44.entities.Machine.list();
        // Ajustar según la respuesta real de base44
        return response?.data || response || [];
      } catch (error) {
        console.error('Error fetching machines:', error);
        throw new Error(`Error al cargar máquinas: ${error.message}`);
      }
    },
    retry: 2,
    refetchOnWindowFocus: false
  });

  // Estado inicial ordenado
  const initialOrderedMachines = useMemo(() => {
    if (!machines || machines.length === 0) return [];
    return [...machines].sort((a, b) => (a.orden || 0) - (b.orden || 0));
  }, [machines]);

  const [orderedMachines, setOrderedMachines] = useState(initialOrderedMachines);

  // Sincronizar cuando machines cambie
  useEffect(() => {
    if (machines && machines.length > 0) {
      const sorted = [...machines].sort((a, b) => (a.orden || 0) - (b.orden || 0));
      setOrderedMachines(sorted);
    }
  }, [machines]);

  // Mutación mejorada
  const updateOrderMutation = useMutation({
    mutationFn: async (machinesWithOrder) => {
      const updates = machinesWithOrder.map((machine, index) => ({
        id: machine.id,
        data: { 
          orden: index + 1,
          // Preservar otros campos si es necesario
          ...machine
        }
      }));
      
      // Ejecutar secuencialmente para evitar sobrecarga
      const results = [];
      for (const update of updates) {
        try {
          const result = await base44.entities.Machine.update(update.id, update.data);
          results.push(result);
        } catch (error) {
          console.error(`Error updating machine ${update.id}:`, error);
          throw error; // Detener si hay error crítico
        }
      }
      return results;
    },
    onSuccess: () => {
      queryClient.invalidateQueries({ queryKey: ['machines'] });
      toast.success("✅ Orden de máquinas guardado correctamente");
    },
    onError: (error) => {
      toast.error(`❌ Error al guardar el orden: ${error.message}`);
      console.error('Mutation error:', error);
    },
  });

  const handleDragEnd = (result) => {
    if (!result.destination) return;

    const items = Array.from(orderedMachines);
    const [reorderedItem] = items.splice(result.source.index, 1);
    items.splice(result.destination.index, 0, reorderedItem);

    setOrderedMachines(items);
  };

  const handleSave = () => {
    if (orderedMachines.length === 0) {
      toast.warning("No hay máquinas para ordenar");
      return;
    }

    // Verificar cambios
    const originalOrder = [...machines].sort((a, b) => (a.orden || 0) - (b.orden || 0));
    const hasChanges = JSON.stringify(orderedMachines.map(m => m.id)) 
      !== JSON.stringify(originalOrder.map(m => m.id));

    if (!hasChanges) {
      toast.info("No hay cambios para guardar");
      return;
    }

    updateOrderMutation.mutate(orderedMachines);
  };

  const handleReset = () => {
    const sorted = [...machines].sort((a, b) => (a.orden || 0) - (b.orden || 0));
    setOrderedMachines(sorted);
    toast.info("Orden restablecido al original");
  };

  // Estados de carga
  if (isLoading) {
    return (
      <Card>
        <CardContent className="p-8">
          <div className="flex flex-col items-center justify-center space-y-4">
            <RefreshCw className="w-8 h-8 animate-spin text-blue-600" />
            <p className="text-gray-600">Cargando máquinas...</p>
          </div>
        </CardContent>
      </Card>
    );
  }

  if (fetchError) {
    return (
      <Card>
        <CardContent className="p-6">
          <div className="flex flex-col items-center justify-center space-y-4 text-center">
            <AlertCircle className="w-12 h-12 text-red-500" />
            <div>
              <h3 className="font-semibold text-lg text-red-600">Error al cargar</h3>
              <p className="text-gray-600 mt-2">{fetchError.message}</p>
            </div>
            <Button onClick={() => refetch()} variant="outline">
              Reintentar
            </Button>
          </div>
        </CardContent>
      </Card>
    );
  }

  if (machines.length === 0) {
    return (
      <Card>
        <CardContent className="p-8">
          <div className="text-center text-gray-500">
            No hay máquinas registradas
          </div>
        </CardContent>
      </Card>
    );
  }

  return (
    <Card className="shadow-lg">
      <CardHeader className="bg-gradient-to-r from-blue-50 to-indigo-50">
        <div className="flex justify-between items-center">
          <div>
            <CardTitle className="text-2xl font-bold text-gray-800">
              Ordenar Máquinas
            </CardTitle>
            <p className="text-sm text-gray-600 mt-1">
              Arrastra las máquinas para cambiar su orden de visualización
            </p>
          </div>
          <div className="flex gap-2">
            <Button 
              onClick={handleReset}
              variant="outline"
              disabled={updateOrderMutation.isPending}
            >
              Restablecer
            </Button>
            <Button 
              onClick={handleSave} 
              disabled={updateOrderMutation.isPending || orderedMachines.length === 0}
              className="bg-blue-600 hover:bg-blue-700 transition-colors"
            >
              <Save className="w-4 h-4 mr-2" />
              {updateOrderMutation.isPending ? (
                <>
                  <RefreshCw className="w-3 h-3 mr-2 animate-spin" />
                  Guardando...
                </>
              ) : "Guardar Orden"}
            </Button>
          </div>
        </div>
      </CardHeader>
      <CardContent className="p-6">
        <DragDropContext onDragEnd={handleDragEnd}>
          <Droppable droppableId="machines-order-list">
            {(provided, snapshot) => (
              <div
                {...provided.droppableProps}
                ref={provided.innerRef}
                className={`space-y-3 p-2 rounded-lg transition-colors ${
                  snapshot.isDraggingOver ? 'bg-blue-50 border-2 border-dashed border-blue-300' : ''
                }`}
              >
                {orderedMachines.map((machine, index) => (
                  <Draggable 
                    key={`machine-${machine.id}`} 
                    draggableId={`machine-${machine.id}`} 
                    index={index}
                  >
                    {(provided, snapshot) => (
                      <div
                        ref={provided.innerRef}
                        {...provided.draggableProps}
                        className={`flex items-center gap-4 p-4 bg-white border rounded-xl transition-all duration-200 ${
                          snapshot.isDragging 
                            ? 'shadow-xl ring-2 ring-blue-500 scale-[1.02]' 
                            : 'hover:shadow-md hover:border-blue-300'
                        }`}
                      >
                        <div 
                          {...provided.dragHandleProps} 
                          className="cursor-grab active:cursor-grabbing hover:bg-gray-100 p-2 rounded-lg transition-colors"
                        >
                          <GripVertical className="w-5 h-5 text-gray-500" />
                        </div>
                        <div className="flex-1">
                          <div className="font-semibold text-gray-900 text-lg">
                            {machine.nombre || 'Sin nombre'}
                          </div>
                          <div className="text-sm text-gray-500">
                            {machine.codigo || 'Sin código'} • Tipo: {machine.tipo || 'N/A'}
                          </div>
                        </div>
                        <div className="flex items-center gap-4">
                          <div className="px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-sm font-semibold">
                            Posición {index + 1}
                          </div>
                          {machine.orden !== undefined && machine.orden !== index + 1 && (
                            <div className="text-xs text-amber-600">
                              (Original: {machine.orden})
                            </div>
                          )}
                        </div>
                      </div>
                    )}
                  </Draggable>
                ))}
                {provided.placeholder}
              </div>
            )}
          </Droppable>
        </DragDropContext>
        
        {/* Información adicional */}
        <div className="mt-6 p-4 bg-gray-50 rounded-lg">
          <div className="flex items-center justify-between">
            <div className="text-sm text-gray-600">
              <span className="font-medium">{orderedMachines.length}</span> máquinas en lista
            </div>
            <div className="text-xs text-gray-500">
              Arrastra y suelta para reordenar
            </div>
          </div>
        </div>
      </CardContent>
    </Card>
  );
}
